<h4>Click on an ingredient to edit</h4>
{{#each ingredients}}
<div class='ingredient' id={{this._id}}>	
  Name
  <input class='name-input' type='text' name='name' value={{this.name}}>
  Price
  <input class='price-input' type='number' min=0 name='price' value={{this.price}}>
  <input class='inStock-input' type='checkbox' checked>In Stock</input>
  <button class='btn-save' hidden>Save</button>
</div>
{{/each}}
<button class='btn-add'>Add New Ingredient</button>
